<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev2qa.example.layout.table.TableLayoutActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Table header -->
        <TableLayout
            android:id="@+id/table_layout_table_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/table_layout_row_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Titel -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="start"
                    android:text="Artikel"
                    android:textAlignment="textStart"
                    android:textSize="24dp"
                    android:padding="5dp"
                    />
<!-- button to add row -->
                <Button
                    android:id="@+id/table_layout_add_row_button"
                    android:layout_column="3"
                    android:layout_gravity="end"
                    android:text="+"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/SmallFont" />

            </TableRow>
        </TableLayout>
        <!-- table header outside list -->
        <TableLayout
            android:id="@+id/table_layout_head2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:stretchColumns="2">

        <TableRow
            android:id="@+id/table_layout_head_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- android:layout_span configure how many columns to span by this column. -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:text="Menge"
                android:layout_columnWeight="10"
                android:textAlignment="textStart"
                android:textSize="16dp"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:text="Text"
                android:layout_gravity="left"
                android:textAlignment="gravity"
                android:textSize="16dp"
                android:padding="5dp"
                android:layout_columnWeight="80"
                />
<!-- Preis?
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="end"
                android:text="Preis"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:padding="5dp"

                />
-->
            <!-- Button to delete row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="end"
                android:text="Delete"
                android:layout_columnWeight="10"
                android:textAlignment="viewEnd"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </TableRow>
            <!-- Add a  line. -->
            <View
                android:layout_height="1px"
                android:background="@color/black" />
        </TableLayout>
        <!-- the body with a list of artikel -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- this table is the list to extend, will be filled by code -->
                <TableLayout
                    android:id="@+id/table_layout_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:stretchColumns="2"
                    android:shrinkColumns="1,3"
                    >



                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>