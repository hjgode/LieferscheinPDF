<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.layout.table.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Container for all -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kunde"
                        android:textSize="@dimen/LargeFont">
                    </TextView>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hide"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:textSize="@dimen/SmallFont"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/button_show_hide_kunde"
                        android:theme="@style/Widget.AppCompat.Button.Small" >

                    </Button>
                </LinearLayout>
                <!-- Kunde -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_kunde"
                    >

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:" />

                        <EditText
                            android:id="@+id/editTextTextPersonName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Name" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Straße:" />

                        <EditText
                            android:id="@+id/editTextPersonStrasse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Straße" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:" />

                        <EditText
                            android:id="@+id/editTextPersonOrt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Ort" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liefer Datum:" />

                        <EditText
                            android:id="@+id/editTextLieferDatum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="datetime"
                            android:text="" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liefer Nummer:" />

                        <EditText
                            android:id="@+id/editTextLieferNummer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:text="" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liefer Start:" />

                        <EditText
                            android:id="@+id/editTextLieferStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="datetime" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView3e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liefer Ende:" />

                        <EditText
                            android:id="@+id/editTextLieferEnde"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="datetime"
                            android:text="" />

                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Table header -->
                    <TableLayout
                        android:id="@+id/table_layout_table_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:stretchColumns="1">

                        <TableRow
                            android:id="@+id/table_layout_row_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Titel -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_gravity="start"
                                android:padding="5dp"
                                android:text="Artikel"
                                android:textAlignment="textStart"
                                android:textSize="@dimen/LargeFont" />
                            <!-- button to add row -->
                            <Button
                                android:id="@+id/btnArtikelBearbeiten"
                                android:layout_column="3"
                                android:layout_gravity="end"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Liste"
                                android:textAlignment="viewEnd"
                                android:textSize="@dimen/SmallFont"
                                android:theme="@style/Widget.AppCompat.Button.Small" />

                        </TableRow>
                    </TableLayout>
                    <!-- table header outside list -->
                </TableLayout>
                <!-- the body with a list of artikel -->
                <!-- Liefer Ende -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TableLayout>
            </LinearLayout>
            <!-- the signature part -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:penColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/buttons_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <Button
                        android:id="@+id/clearSignatureButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="clear" />

                    <Button
                        android:id="@+id/saveSignatureButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:text="save" />
                </LinearLayout>

                <Button
                    android:id="@+id/button_create_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="PDF erstellen" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>