<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pdf.lieferschein.ArtikelListeActivity">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvMenge"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Menge">

            </TextView>

            <TextView
                android:id="@+id/tvArtikelnummer"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Artikelnummer"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvArtikeltext"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Artikeltext">

            </TextView>

            <TextView
                android:id="@+id/tvPreis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preis"></TextView>

        </TableRow>

</TableLayout>